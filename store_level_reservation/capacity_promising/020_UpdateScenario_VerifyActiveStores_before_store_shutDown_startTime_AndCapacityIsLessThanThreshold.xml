<?xml version="1.0" encoding="UTF-8"?>		 
<!-- Verify
	Update Scenario : Verify active stores, before store shut down start time and capacity is less than threshold
	pre requisite :  2 stores, all of them have inventory 
	
stores         inventory                    capacity
store1           >0                        <threshold 
store2           >0                        >threshold 

now  : Apply shut down to store 1 
-->
<!--Expected
	After shut down
	1. store1 should be inactive and store2 should be active
	2. Check Active store ATP for them. ATP = 40 in both stores
		
-->

<testsuite description="Update Scenario : Verify active stores, before store shut down start time and capacity is less than threshold" name="020">

    <test apiMethod="POST" apiUrl="/master/itemDetails/JCP/"
        description="Item details : 1 item"
        expectedJsonFile="expected\020_01.json"
        inputJsonFile="input\020_01.json" name="01" outputJsonFile="output\020_01.json"/>

    <test apiMethod="POST" apiUrl="/master/node/JCP/0219/" 
		description="Insert node 1"
        expectedJsonFile="expected\020_02.json"
        inputJsonFile="input\020_02.json" name="02" outputJsonFile="output\020_02.json"/>

  <test apiMethod="POST" apiUrl="/master/node/JCP/0220/" 
		description="Insert node 2"
        expectedJsonFile="expected\020_03.json"
        inputJsonFile="input\020_03.json" name="03" outputJsonFile="output\020_03.json"/>


    <test apiMethod="POST" apiUrl="/inventory/JCP/absolute/"
        description="insert inventory : As per above condition "
        expectedJsonFile="expected\020_05.json"
        inputJsonFile="input\020_05.json" name="05" outputJsonFile="output\020_05.json"/>
		
		
	<test apiMethod="POST" apiUrl="/master/masterdata/insert/nodeCapacityDetails/JCP/"
        description="Node Capacity : As per above condition "
        expectedJsonFile="expected\020_06.json"
        inputJsonFile="input\020_06.json" name="06" outputJsonFile="output\020_06.json"/>

<test apiMethod="delay" delay="15000" description="Delay to get map updated : 15000 ms" name="100"/>
		
	<test apiMethod="GET" apiUrl="/master/getActiveStores/"
        description="Get active stores : store 1 should be inactive and store2 should be active"
        expectedJsonFile="expected\020_07.json"
        name="07" outputJsonFile="output\020_07.json"/>

<test apiMethod="delay" delay="15000" description="Delay to get map updated : 15000 ms" name="100"/>
		
	<test apiMethod="POST" apiUrl="/master/storeShutdown/"
        description="shutdown to store1 "
        expectedJsonFile="expected\020_08.json"
        inputJsonFile="input\020_08.json" name="08" outputJsonFile="output\020_08.json"/>

<test apiMethod="delay" delay="15000" description="Delay to get map updated : 15000 ms" name="100"/>
		
	<test apiMethod="GET" apiUrl="/master/getActiveStores/"
        description="Get active stores : store1 should be inactive and store2 should be active"
        expectedJsonFile="expected\020_10.json"
        name="10" outputJsonFile="output\020_10.json"/>
		
	
</testsuite>
